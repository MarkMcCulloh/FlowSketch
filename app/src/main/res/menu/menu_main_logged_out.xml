<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Color option-->
    <item
        android:icon="@drawable/color_icon"
        android:title="Color"
        app:showAsAction="always">

        <menu>

            <!--Fill menu-->
            <item
                android:id="@+id/fill_action"
                android:title="Fill">
            </item>


            <!--Stroke menu-->
            <item
                android:id="@+id/stroke_action"
                android:title="Stroke" >
            </item>


        </menu>
    </item>


    <!--Shape-->
    <item
        android:icon="@drawable/shape_icon"
        app:showAsAction="always"
        android:title="Shape">

        <menu>
            <item
                android:id="@+id/square_item"
                android:title="Square"
                android:icon="@mipmap/shapes_square_icon"
                android:onClick="insertSquare" />
            <item
                android:id="@+id/circle_item"
                android:title="Circle"
                android:titleCondensed=""
                android:icon="@mipmap/shapes_circle_icon"
                android:onClick="insertCircle"/>
            <item
                android:id="@+id/triangle_item"
                android:title="Triangle"
                android:titleCondensed=""
                android:icon="@mipmap/shapes_triangle_icon"
                android:onClick="insertTriangle" />
            <item
                android:id="@+id/rectangle_item"
                android:title="Rectangle"
                android:titleCondensed=""
                android:icon="@mipmap/shapes_rectangle_icon"
                android:onClick="insertRect"/>
        </menu>

    </item>


    <!--Lines-->
    <item
        android:icon="@drawable/line_icon"
        android:id="@+id/lines_item"
        app:showAsAction="always"
        android:title="Lines">

        <menu>
            <item
                android:title="Arrow"
                android:onClick="insertLineR" />
        </menu>
    </item>


    <!--Text-->
    <!--Text-->
    <item
        android:icon="@drawable/text_icon"
        android:id="@+id/font_item"
        app:showAsAction="always"
        android:titleCondensed=""
        android:title="Font">

        <menu>
            <item
                android:id="@+id/font_calibri"
                android:title="Calibri"
                android:titleCondensed="" />
            <item
                android:id="@+id/font_magenta"
                android:title="Magenta"
                android:titleCondensed="" />
            <item
                android:id="@+id/font_times_new_roman"
                android:title="Times New Roman"
                android:titleCondensed="" />
            <item
                android:id="@+id/font_agency_fb"
                android:title="Agency FB"
                android:titleCondensed="" />
            <item
                android:id="@+id/font_comic_sans_ms"
                android:title="Comic Sans MS"
                android:titleCondensed="" />
        </menu>

    </item>



    <!--Image-->
    <item
        android:icon="@drawable/image_icon"
        android:id="@+id/image_item"
        app:showAsAction="always"
        android:title="Image"
        >

    </item>


    <!--Delete Canvas-->
    <item
        android:icon="@drawable/trash_icon"
        app:showAsAction="always"
        android:title="Delete">

    </item>

    <!--New Canvas-->
    <item
        android:id="@+id/new_canvas_action"
        app:showAsAction="never"
        android:title="New"
        android:onClick="clearCanvas"/>


    <!--Login-->
    <item
        android:id="@+id/login_action"
        app:showAsAction="never"
        android:title="Login"/>

</menu>